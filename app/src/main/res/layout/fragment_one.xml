<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent">


    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="About User"
                android:textSize="15dp"
                style="@style/Base.TextAppearance.AppCompat.Title"
                android:layout_margin="10dp"/>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="2">
            <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="Email"
                    android:layout_margin="2dp"
                    android:background="#FFFFFF"
                    android:textColor="#000000"/>
            <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="1manish2222@gmail.com"
                    android:id="@+id/email"
                    android:layout_margin="2dp"
                    android:background="#FFFFFF"
                    android:textColor="#000000"/>

        </LinearLayout>
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="2">
            <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="Gender"
                    android:layout_margin="2dp"
                    android:background="#FFFFFF"
                    android:textColor="#000000"/>
            <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Male"
                    android:id="@+id/Gender"
                    android:layout_margin="2dp"
                    android:background="#FFFFFF"
                    android:textColor="#000000"/>

        </LinearLayout>
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="2">
            <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="Birthday"
                    android:layout_margin="2dp"
                    android:background="#FFFFFF"
                    android:textColor="#000000"/>
            <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="15-05-1998"
                    android:id="@+id/Birthday"
                    android:layout_margin="2dp"
                    android:background="#FFFFFF"
                    android:textColor="#000000"/>

        </LinearLayout>
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="2">
            <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="Lives In"
                    android:layout_margin="2dp"
                    android:background="#FFFFFF"
                    android:textColor="#000000"/>
            <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Patna"
                    android:id="@+id/livesIn"
                    android:layout_margin="2dp"
                    android:background="#FFFFFF"
                    android:textColor="#000000"/>

        </LinearLayout>
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="2">
            <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="Member Since"
                    android:layout_margin="2dp"
                    android:background="#FFFFFF"
                    android:textColor="#000000"/>
            <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="24-01-2019"
                    android:id="@+id/memberSince"
                    android:layout_margin="2dp"
                    android:background="#FFFFFF"
                    android:textColor="#000000"/>

        </LinearLayout>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Extended Info"
                    android:textSize="15dp"
                    style="@style/Base.TextAppearance.AppCompat.Title"
                    android:layout_margin="10dp"/>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="2">
                <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="Where do you see yourself in 5 years?"
                        android:layout_margin="2dp"
                        android:background="#FFFFFF"
                        android:textColor="#000000"/>
                <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Best of Myself"
                        android:id="@+id/aim"
                        android:layout_margin="2dp"
                        android:background="#FFFFFF"
                        android:textColor="#000000"/>

            </LinearLayout>
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="2">
                <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="Political Views"
                        android:layout_margin="2dp"
                        android:background="#FFFFFF"
                        android:textColor="#000000"/>
                <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="No comments"
                        android:id="@+id/politicalViews"
                        android:layout_margin="2dp"
                        android:background="#FFFFFF"
                        android:textColor="#000000"/>

            </LinearLayout>
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="2">
                <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="Favourite Film( at Least three)"
                        android:layout_margin="2dp"
                        android:background="#FFFFFF"
                        android:textColor="#000000"/>
                <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Sholay, Crook"
                        android:id="@+id/favFilm"
                        android:layout_margin="2dp"
                        android:background="#FFFFFF"
                        android:textColor="#000000"/>

            </LinearLayout>
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="2">
                <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="Interests"
                        android:layout_margin="2dp"
                        android:background="#FFFFFF"
                        android:textColor="#000000"/>
                <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Singing"
                        android:id="@+id/interests"
                        android:layout_margin="2dp"
                        android:background="#FFFFFF"
                        android:textColor="#000000"/>

            </LinearLayout>
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="2">
                <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="Relationship Status"
                        android:layout_margin="2dp"
                        android:background="#FFFFFF"
                        android:textColor="#000000"/>
                <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Single"
                        android:id="@+id/relationshipStatus"
                        android:layout_margin="2dp"
                        android:background="#FFFFFF"
                        android:textColor="#000000"/>

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
